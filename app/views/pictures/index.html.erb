<h1> Pictures</h1>
<h3> Click on picture to more details </h3>
<table>
 
    <td>File</td>
    <% @pictures.each do |picture| %>
    <tr> 
        <td><%= picture.file.size %>KB</td>
       
    <%#= link_to image_tag(home.avatar.url(:thumb)),
    {:controller=>"homes",:action=>"show",:id=>home.id} %> 
    <td><%=link_to image_tag(picture.file_url(:thumb)),{:controller =>"pictures",:action =>"show", :id=>picture.id} %></td>
    <td><%#= link_to 'Show', picture %></td>
    <td><%#= link_to 'Edit', edit_picture_path(picture) %></td>
    <td><%#= button_to "delete",picture, :method=>:delete, :class=>:destroy %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New Picture', new_picture_path %>

